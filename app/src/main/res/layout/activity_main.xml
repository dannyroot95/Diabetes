                android:clickable="true"
                app:cardCornerRadius="12dp"
                android:layout_margin="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="6dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:text="¿Cual es su edad?"
                        android:fontFamily="@font/futura"
                        android:layout_height="wrap_content"/>

                    <RadioGroup
                        android:layout_width="match_parent"
                        android:id="@+id/radioGroupEdad"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/radio_edad_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="checkRadioEdad"
                            android:text="Mas de 35 años"
                            android:fontFamily="@font/futura"
                            android:checked="true"/>
                        <RadioButton
                            android:id="@+id/radio_edad_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Entre 10 - 34 años"
                            android:fontFamily="@font/futura"
                            android:onClick="checkRadioEdad"/>
                    </RadioGroup>

                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="6dp"
                android:clickable="true"
                app:cardCornerRadius="12dp"
                android:layout_margin="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="6dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:fontFamily="@font/futura"
                        android:text="Complete los siguientes datos : "
                        android:layout_height="wrap_content"/>

                  <LinearLayout
                      android:layout_width="match_parent"
                      android:orientation="horizontal"
                      android:layout_height="wrap_content">

                      <TextView
                          android:layout_width="wrap_content"
                          android:text="Peso : "
                          android:fontFamily="@font/futura"
                          android:gravity="center"
                          android:layout_height="match_parent"/>

                      <EditText
                          android:layout_width="wrap_content"
                          android:layout_weight="1"
                          android:id="@+id/edtPeso"
                          android:fontFamily="@font/futura"
                          android:inputType="number"
                          android:layout_height="wrap_content"/>

                  </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:text="Altura :"
                            android:fontFamily="@font/futura"
                            android:gravity="center"
                            android:layout_height="match_parent"/>

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:id="@+id/edtAltura"
                            android:fontFamily="@font/futura"
                            android:inputType="numberDecimal"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <Button
                        android:layout_width="wrap_content"
                        android:text="Procesar"
                        android:id="@+id/btnProcesar"
                        android:fontFamily="@font/futura"
                        android:layout_marginTop="5dp"
                        android:textColor="#fff"
                        android:backgroundTint="@color/semired"
                        android:layout_height="wrap_content"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:text="Resultado : "
                            android:gravity="center"
                            android:fontFamily="@font/futura"
                            android:layout_height="match_parent"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:textStyle="bold"
                            android:fontFamily="@font/futura"
                            android:id="@+id/txtResultado"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>


