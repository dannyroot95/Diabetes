<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:gravity="center">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        app:cardBackgroundColor="#DADADA"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="Ficha de resultados"
                android:textColor="#000"
                android:fontFamily="@font/futura"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="25sp"
                android:layout_height="wrap_content"/>

            <EditText
                android:layout_width="match_parent"
                android:fontFamily="@font/futura"
                android:textColor="#000"
                android:hint="Nombres"
                android:textSize="14sp"
                android:textColorHint="#909090"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/edtHistoriaNombre"
                android:layout_height="wrap_content"/>

            <EditText
                android:layout_width="match_parent"
                android:fontFamily="@font/futura"
                android:textColor="#000"
                android:hint="Apellidos"
                android:textSize="14sp"
                android:textColorHint="#909090"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/edtHistoriaApellidos"
                android:layout_height="wrap_content"/>

            <EditText
                android:layout_width="match_parent"
                android:fontFamily="@font/futura"
                android:textColor="#000"
                android:hint="DNI"
                android:inputType="number"
                android:textSize="14sp"
                android:maxLength="8"
                android:textColorHint="#909090"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/edtHistoriaDni"
                android:layout_height="wrap_content"/>

            <EditText
                android:layout_width="match_parent"
                android:fontFamily="@font/futura"
                android:textColor="#000"
                android:hint="Diabetes"
                android:textColorHint="#000"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/edtHistoriaResultado"
                android:layout_height="wrap_content"/>

            <EditText
                android:layout_width="match_parent"
                android:fontFamily="@font/futura"
                android:textColor="#000"
                android:hint="Porcentaje"
                android:textColorHint="#000"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/edtHistoriaPorcentaje"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="6dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:layout_width="170dp"
                    android:text="Cerrar"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:textColor="#000"
                    android:textSize="12dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/btnCerrarHistoria"
                    android:fontFamily="@font/futura"
                    android:backgroundTint="#fff"
                    android:layout_height="wrap_content"/>

                <Button
                    android:layout_width="170dp"
                    android:text="Guardar"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:textColor="#000"
                    android:textSize="12dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/btnGuardar"
                    android:drawableLeft="@drawable/ic_save"
                    android:fontFamily="@font/futura"
                    android:backgroundTint="#fff"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>